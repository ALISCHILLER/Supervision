<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/mitra_bold"
            android:text="title"
            android:textColor="@color/frightnight"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.zires.switchsegmentedcontrol.ZiresSwitchSegmentedControl
            android:id="@+id/booleanSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:activeBgColor="@color/frightnight"
            app:activeTextColor="@android:color/white"
            app:backgroundColor="@android:color/white"
            app:borderColor="@color/frightnight"
            app:checked="false"
            app:cornerRadius="50dp"
            app:inactiveTextColor="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/view5"
            app:layout_constraintEnd_toStartOf="@+id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="2dp"
            app:switchFontFamily="serif-monospace"
            app:textSize="@dimen/_5sdp"
            app:textToggleLeft="خیر"
            app:textToggleRight="بله" />



        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/grey_light_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/booleanSwitch" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>