<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:scrollbars="none"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl">

                <TextView
                    android:id="@+id/txtNumberItem"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_rectangle_fright_night"
                    android:textColor="@color/white"
                    android:fontFamily="@font/mitra_bold"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:text=""
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/drawable_rectangle_fright_night"
                    android:textColor="@color/white"
                    android:fontFamily="@font/mitra_bold"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:text=""
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txtNumberItem"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/txtFOrderWeight"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/drawable_rectangle_fright_night"
                    android:textColor="@color/white"
                    android:fontFamily="@font/mitra_bold"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:text="کل سفارش"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txtDate"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/txtFInProgressOrder"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/drawable_rectangle_fright_night"
                    android:textColor="@color/white"
                    android:fontFamily="@font/mitra_bold"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:text="سفارش در راه"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txtFOrderWeight"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlCompat" />


                <TextView
                    android:id="@+id/txtFoFinalWeight"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/drawable_rectangle_fright_night"
                    android:textColor="@color/white"
                    android:fontFamily="@font/mitra_bold"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:text="سفارش فاکتور شده"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txtFInProgressOrder"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlCompat" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>